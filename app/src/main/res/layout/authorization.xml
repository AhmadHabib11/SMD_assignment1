<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authorizationpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textSize="50sp"
        android:fontFamily="@font/epitetbold"
        android:textColor="#8d3d44"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />


    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profilepic"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <TextView
        android:id="@+id/loginbutton"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/loginbar"
        android:layout_marginTop="15dp"
        android:text="Log in"
        android:layout_below="@id/profilePic"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/switchaccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch accounts"
        android:textStyle="bold"
        android:textColor="#9a5a5b"
        android:textSize="16sp"
        android:layout_below="@id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:clickable="true"
        />


    <View
        android:id="@+id/whiteline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_below="@id/switchaccounts"
        android:layout_marginTop="220dp" />


    <LinearLayout
        android:id="@+id/signupSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whiteline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signupPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#9a5a5b"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/signupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up."
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="#9a5a5b"
            android:textSize="15sp"/>
    </LinearLayout>



        <ImageView
            android:id="@+id/homeindicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/homeindicator"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />


</RelativeLayout>
