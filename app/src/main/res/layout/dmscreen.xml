<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dmscreen"
    >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="#fafafa"
        android:elevation="5dp"

        >

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/redarrow"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/marooncircle"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:text="IS"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="12dp"
            android:text="internshala"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/vidcall"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/vidcall"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            >

        </ImageView>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/i"
            android:backgroundTint="#9b5a5a"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            >

        </ImageView>



    </LinearLayout>

    <!-- TIME STAMP -->
    <TextView
        android:id="@+id/chatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4:49 PM"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/messageBubble"
        android:layout_marginBottom="10dp" />

    <!-- STATIC MESSAGE BUBBLE -->
    <TextView
        android:id="@+id/messageBubble"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="15sp"
        android:background="@drawable/messagebubble"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_above="@id/bottomBar"
        android:layout_marginBottom="20dp" />


    <!-- BOTTOM INPUT BAR -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="64dp"
        android:layout_above="@id/homeindicator"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/messagebar"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/whitecamerafilled"
            android:background="@drawable/marooncircle"
            android:padding="6dp"
            android:layout_marginEnd="6dp" />


        <EditText
            android:id="@+id/messageBox"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Message..."
            android:background="#eaeaea"
            android:paddingHorizontal="10dp"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/mic"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/photos"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/sticker"
            android:layout_marginStart="8dp" />
    </LinearLayout>













    <ImageView
        android:id="@+id/homeindicator"
        android:src="@drawable/homeindicator"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>