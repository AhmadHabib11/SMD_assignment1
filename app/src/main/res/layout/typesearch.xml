<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/typesearch"
    >


    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="#fafafa">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/searchbar2"
            android:paddingHorizontal="10dp">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/searchicon2"
                android:layout_marginEnd="6dp"/>

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="internshala"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textSize="19sp"
                />

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cross"
                android:layout_marginEnd="7dp"
                />

        </LinearLayout>

        <!-- Clear Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textStyle="bold"
            android:textColor="#957070"
            android:textSize="23sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="18dp"/>
    </LinearLayout>

    <!-- Tabs Row -->
    <LinearLayout
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/topLayout"
        android:orientation="horizontal"
        android:background="#fafafa">

        <!-- Top (Active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"/>
        </LinearLayout>

        <!-- Accounts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabAccounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accounts"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Tags -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Places -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabPlaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabsLayout"
        android:layout_above="@id/homeindicator"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Blue Circle with IS -->
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/bluecircle"
                    android:gravity="center"
                    android:text="IS"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshala"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshala"
                        android:textSize="16sp"
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- White Circle with # -->
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/whitecircle"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#internshala"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000+ post"
                        android:textSize="16sp"
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- White Circle with # -->
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/whitecircle"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#internshala_nomoretheory_challenge"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500+ post"
                        android:textSize="16sp"
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- White Circle with # -->
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/whitecircle"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internshala"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intershala, B-610, Untech Business Zone,.."
                        android:textSize="16sp"
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- White Circle with # -->
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/whitecircle"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshalastudentpartner"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500+ post"
                        android:textSize="16sp"
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- White Circle with # -->
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/whitecircle"
                    android:gravity="center"
                    android:text="#"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- Texts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="internshalaincampus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100+ post"
                        android:textSize="16sp"
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>





    <!-- Bottom Home Indicator -->
    <ImageView
        android:id="@+id/homeindicator"
        android:src="@drawable/homeindicator"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>


</RelativeLayout>
